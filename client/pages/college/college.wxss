.search-field-wrapper {
    width:100%;
    height: 160rpx;
}

.search-field-wrapper .search-field {
    right: 220rpx;
}

.search-submit-btn {
    position: absolute;
    right: 40rpx;
    top: 40rpx;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 40rpx;
    color: #fff;
    font-size: 28rpx;
    border-radius: 12rpx;
    background-color: #4593f8;
}


/*
    学组
 */

.college-group-wrapper {
    overflow:hidden;
    background-color: #fff;
    padding: 32rpx;
    font-size: 28rpx;
    color: #333;
    margin-bottom: 24rpx;
}

.college-group-title {
    float:left;
    width: 100rpx;
}

.college-group-list {
    height: 90rpx;
    overflow:hidden;
}

.more-college-group-btn {
    display: inline-block;
    padding: 10rpx;
    background-color: #4593f8;
    border-radius: 6rpx;
    color: #fff;
    float:right;
}


.college-group-item {
    display: inline-block;
    margin-right: 40rpx;
    margin-bottom: 20rpx;
}

.college-group-item.active {
    color: #4593f8;
}



.course-content {
    padding: 0 30rpx;
    box-sizing: border-box;
}
