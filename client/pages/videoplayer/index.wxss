.courseware-expert {
	padding: 32rpx;
	color: #666;
	font-size: 28rpx;
}

.courseware-teacher,
.courseware-unit,
.courseware-summary {
	overflow:hidden;
	margin-bottom: 30rpx;
}

.courseware-teacher-title,
.courseware-unit-title,
.courseware-summary-title {
	color:#000;
	font-size: 28rpx;
	float:left;
