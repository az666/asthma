<view class="container">
	<view class="course-basic-info">
		<view class="course-info-text">
			<view class="course-name">
				 课程名字
			</view>
			<view class="course-type">
				分类: 是这种
			</view>
			<view class="course-group">
				学组：结直肠学组
			</view>
		</view>
		<view class="course-image">
			<image src="../../images/kecheng.jpg" />
		</view>
	</view>
	<view class="study-course-btn-wrapper">
		<view class="study-course-btn">
			学习课程
		</view>
	</view>
	<view class="tab-wrapper">
	    <view class="swiper-tab">
            <view class="swiper-tab-list2 {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="switchNav">课程简介</view>
            <view class="swiper-tab-list2 {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="switchNav">课程目录</view>
            <view class="swiper-tab-list2 {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="switchNav">课程评分</view>
        </view>
        <swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
            <swiper-item>
				<view class="course-summary">
					这是这个课程的简介
				</view>
            </swiper-item>
            <swiper-item>
				<view>hehe</view>
            </swiper-item>
            <swiper-item>
				<view>hoho</view>
            </swiper-item>
        </swiper>
	</view>

</view>
