/**index.wxss**/

.swiper-container {
  position: relative;
  width:100%;
}

.swiper-container .slide-image {
  position:absolute;
  width:100%;
  height:158px;
}

.search-field {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  right: 40rpx;
  height: 80rpx;
  border-radius:16rpx;
}

.bg-image {
  position:absolute;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  width: 100%;
  height: 80rpx;
  border-radius:16rpx;
}

.search-field input {
  padding-left: 80rpx;
  height: 80rpx;
}
.search-field .search-btn {
  position: absolute;
  top:50%;
  left: 20rpx;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}



.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
