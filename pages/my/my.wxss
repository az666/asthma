.userinfo {
    display:flex;
    align-items: center;
    padding: 32rpx;
}

.user-avatar-wrapper,
.user-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.user-nickname {
    flex: 1;
    margin-left: 32rpx;
}


