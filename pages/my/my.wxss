.userinfo {
    display:flex;
    align-items: center;
    padding: 32rpx;
}

.user-avatar-wrapper,
.user-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.user-nickname {
    flex: 1;
    margin-left: 32rpx;
}


/*
    绑定学习卡
 */

.bind-card-btn {
    color: #4593f8;
}


.bind-card-btn,
.binded-cards-title,
.binded-card-item {
    font-size: 26rpx;
    padding: 0 32rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #999;
}

.binded-card-name {
    display: inline;
    color: #4593f8;
}

.dialog-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 10000;
}

.dialog {
    position:absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80%;
    background-color: #fff;
}

.dialog-header {
    display:flex;
    justify-content: space-between;
    align-items: center;
    width:100%;
    height: 80rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    background-color: #4593f8;
}

.dialog-title {
    line-height: 80rpx;
    color: #fff;
    font-size: 28rpx;
    font-weight: 700;
}


.close-btn {
    width: 40rpx;
    height: 40rpx;
}

.dialog-content {
    padding: 40rpx 20rpx;
}

.dialog-content input {
    border:1px solid #999;
    height: 80rpx;
    padding-left: 20rpx;
    box-sizing: border-box;
}

.dialog-footer {
    display: flex;
    padding: 40rpx 20rpx;
    justify-content: space-between;
}

.cancel-btn,
.enter-btn {
    padding: 0 40rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 60rpx;
    background-color: #4593f8;
    color: #fff;
    font-size: 28rpx;
}

.cancel-btn {
    margin-left: 60rpx;
}

.enter-btn {
    margin-right: 60rpx;
}
